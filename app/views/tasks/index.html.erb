<div class="container">
  <h1>My tasks</h1>

  <ul class="list-group">
    <% @tasks.each do |task| %>

      <!-- <p><%= task.title %></p> -->
      <!-- <p><%= task.details %></p>
      <p><%= task.completed %></p> -->
      <div>
        <li class="list-group-item"><%= link_to task.title, task_path(task) %>
        <%= link_to "♻️",
                task_path(task),
                method: :delete,
                data: { confirm: "Are you sure?" } %>
        </li>
      </div>

    <% end %>

  </ul>
  <br>
  <%= link_to "Create task", new_path %>
</div>




