<div class="container form-control">
  <h2>Edit Task</h2>
  <%= form_for(@task) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_field :details%>
    </div>
    <div class="form-group">
      <%= f.label "Completed" %>
      <%= f.check_box :completed %>
    </div>
   <!--  <%#= f.label :rating %>
    <%#= f.number_field :rating %> -->
    <%= f.submit %>
  <% end %>
  <br>
  <%= link_to "↩︎Go back to tasks", tasks_path %>
</div>
